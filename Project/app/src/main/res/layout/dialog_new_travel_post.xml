<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Travel Post"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Start Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start:"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/startDateInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="yyyy-MM-dd"
                android:inputType="date" />
        </LinearLayout>

        <!-- End Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End:"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/endDateInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="yyyy-MM-dd"
                android:inputType="date" />
        </LinearLayout>

        <!-- Destination -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination:"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/destinationInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Destination"
            android:layout_marginBottom="8dp" />

        <!-- Accommodations -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accommodations:"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/accommodationsInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Accommodations"
            android:layout_marginBottom="8dp"
            />

        <!-- Dining Reservation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dining Reservation:"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/diningReservationInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Dining Reservation"
            android:layout_marginBottom="8dp" />

        <!-- Notes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes about your trip:"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/notesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes about your trip"
            android:inputType="textMultiLine"
            android:lines="3"
            android:gravity="top"
            android:layout_marginBottom="8dp" />

        <!-- Add Post Button -->
        <Button
            android:id="@+id/button_add_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="post"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>

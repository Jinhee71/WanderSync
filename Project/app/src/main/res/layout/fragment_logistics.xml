<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LogisticsFragment">

    <TextView
        android:id="@+id/plannedDaysText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Planned Days: 0"
        android:textSize="18sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/logisticsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logistics"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/displayDataButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Display Data"
        android:onClick="onLogisticsDisplayDataClick"
        android:background="#671994"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/logisticsText" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="400dp" />

    <TextView
        android:id="@+id/collaboratorsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collaborators"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="215dp"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/collaboratorsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="260dp"
        android:gravity="center_horizontal" />

    <ImageButton
        android:id="@+id/addNoteButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:onClick="onLogisticsAddNoteButtonClick"
        android:background="@android:color/holo_blue_light"
        android:src="@drawable/ic_add_note2"
        android:contentDescription="Add Note" />

    <ImageButton
        android:id="@+id/addCollaboratorButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:onClick="addLogisticsCollaboratorButtonClick"
        android:background="@android:color/holo_green_light"
        android:src="@drawable/ic_add_collaborator3"
        android:contentDescription="Add Collaborator" />

</FrameLayout>

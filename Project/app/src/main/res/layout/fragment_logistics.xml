<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LogisticsFragment">

    <TextView
        android:id="@+id/logisticsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logistics"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/displayDataButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Display Data"
        android:background="#671994"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/logisticsText" />


    <TextView
        android:id="@+id/contributorsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contributors"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="215dp"
        android:textSize="30sp" />

    <Button
        android:id="@+id/contributor1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Username1"
        android:background="#671994"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="270dp"
        app:layout_constraintTop_toBottomOf="@id/contributorsText" />

</FrameLayout>